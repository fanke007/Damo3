/* pages/player/chat.wxss */
.container{
    background-color:cadetblue
}
.chat-head{
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.chat-song{
  display: flex;
}
.chat-song image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.chat-song-des{
  flex: 1;
  padding-left: 24rpx;
  padding-top: 20rpx;
  overflow: hidden;
}
.chat-song-des text{
  display: block;
  font-size: 32rpx;
}
.chat-song-des text:last-child{
  font-size: 24rpx;
  color: #aeaeae;
}
.chat-body{
  height: calc(100vh - 322rpx);
  overflow: hidden;
}
.chat-list{
  padding: 20rpx 0;
}
.chat-item{
  padding: 10rpx 0 20rpx 20rpx;
}

.user-inline{
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
}
.user-inline image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 200rpx;
}
.user-des{
  flex: 1;
  padding-left: 10rpx;
  overflow: hidden;
}
.user-des text{
  display: block;
}
.user-des text:last-child{
  font-size: 20rpx;
  color: #aeaeae;
}
.chat-info{
  margin-left: 70rpx;
  padding-bottom: 10rpx;
  padding-right: 5apx;
  line-height: 1.6;
  border-bottom: 2rpx solid #eee;
}

.chat-form{
  position: fixed;
  left: 0;
  right: 0;
  bottom : 0;
  padding: 10rpx;
  background: #fff;
}
.chat-form button{
  float: right;
  padding: 0 16rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  background: transparent;
}
.chat-form button::after{
  border: none;
}
.chat-form input{
  box-sizing: border-box;
  height: 60rpx;
  padding: 0 16rpx;
  border-bottom: 2rpx solid #eee;
}